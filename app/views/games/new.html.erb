<div class="container">
  <div class="title">
    <h1>= New game =</h1>
  </div>
  <div class="letter-container">
    <% @letters.each do |l| %>
      <div class="letter-box"><%= l %></div>
    <% end %>
  </div>
  <form method="POST" action="/score" class="letter-form">
    <%= hidden_field_tag 'letters', @letters %>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <div>
      <input type="text" name="solution" placeholder="Which is the longest word you can find?">
    </div>
    <div>
      <input type="submit" value="Play">
    </div>
  </form>
</div>
